            <td>{{ row.sector }}</td>
            <td>{{ row.portfolio }}</td>
            <td>{{ row.benchmark }}</td>
            <td>{{ row.allocation }}</td>
            <td>{{ row.selection }}</td>
            <td>{{ row.total }}</td>
